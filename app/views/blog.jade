    body
        aside#sidebar
            img.myPic(src="/img/me.jpg" alt="My Picture")
            address
                ul.contact
                    li.contact_item
                            a(href="http://fifaonlinevr.cn" target="_blank")
                                i.fa.fa-home.fa-fw
                    li.contact_item
                        a(href="mailto:zhang_Janp@163.com")
                            i.fa.fa-envelope.fa-fw
                    li.contact_item
                        a(href="https://github.com/Z-Janp" target="_blank")
                            i.fa.fa-github.fa-fw
            span.about-me 
                a(href="/about") About me
            form.searchBox
                input.searchTxt(type="search",name="search",autocomplete="off")
                input.searchBtn(type="button")
        article#rightSide
            each cat in categories
                ul.cat-list
                    if cat.articles && cat.articles.length > 0
                        li.archive-item #{cat.name}
                            ul.archive-list
                                each item in cat.articles
                                    li
                                        span.archive-time #{moment(item.meta.createAt).format('YYYY/MM/DD')}
                                        h1.archive-title 
                                            a(href="/article/#{item._id}") #{item.title}
        .progress-indicator-2(style="width:0%")
    script(src='/js/article.js')