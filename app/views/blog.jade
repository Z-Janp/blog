    head
        meta(charset="UTF-8")
        meta(name="viewport",content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
        title #{title}
        link(href="/css/app.css",rel="stylesheet")
        link(rel="stylesheet",href="/css/font.css")
        script.
